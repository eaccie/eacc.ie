					<form action="https://api.web3forms.com/submit" method="POST" class="flex flex-col gap-4 items-center">
							<input type="hidden" name="access_key" value="2b3ebddd-40be-40aa-8cd6-f86960e8ee60">
	
							<!-- Styling the email input -->
							<input type="email" name="email" required placeholder="Your Email" class="px-4 py-2 border rounded-lg text-gray-700 min-w-40 sm:min-w-80">
	
							<!-- CAPTCHA will auto-center as it is a block element within a flex container -->
							<div class="h-captcha" data-captcha="true"></div>
	
							<!-- Styling the submit button -->
							<button type="submit" class="px-4 py-2 bg-dark-irish-green text-white rounded-lg sm:text-lg sm:px-8 sm:py-4">Submit Form</button>
					</form>
	
					<div class="mt-4 transform scale-50">
							<script src="https://web3forms.com/client/script.js" async defer></script>
