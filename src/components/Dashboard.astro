---

const { blocks = [], imageSrc="" } = Astro.props;

const processedblocks = blocks.map((block, index) => ({
  growth: 0, // Set the default value
  ...block,
  value: block.value ? block.value.toLocaleString(): "",
  growth: block.growth ? "" + block.growth : "0",
  link : block.link ? "window.open(\'" + block.link + "\')" : ""
  }));

const headTitleItem = processedblocks[0];
const middleIndex = Math.ceil((processedblocks.length  / 2) + 1);
const leftColumnItems = processedblocks.slice(1, middleIndex);
const rightColumnItems = processedblocks.slice(middleIndex);
---

<style>

    .diaspora-dashboard{
        font-family: 'Courier New', monospace;
        background-color: white;
        max-width: 1000px;
        padding: 5px 30px;
    }
    .diaspora-dashboard * a {
        color: inherit;
        text-decoration: none;
    }

    .diaspora-dashboard * a:hover {
        color:inherit; 
        text-decoration:none; 
        cursor:pointer;  
    }
            
