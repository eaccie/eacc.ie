        font-size: 5vw;
    }
    .diaspora-dashboard-title{
        font-size: 3vw;
    }
    .diaspora-dashboard * h4{
        font-size: 3vw;
    }
    .dd-head * p{
        font-size: 7vw;
    }
    .tooltip{
        display:none;
    }
    .tooltiptext{
        display:none;
    }
}

</style>
<div class="text-dark-irish-green" style="width: 100%; display: flex; flex-direction:row; justify-content: center;"> 
<div class="diaspora-dashboard">

   
    <div class="diaspora-dashboard-title">
        <span>&eacute;/acc</span>
        <span>THE TRUE IRISH ECONOMY</span>            
    </div>
    <div class="dd-head">
        <div class="diaspora-dashboard-block" onclick={headTitleItem.link}>
            { headTitleItem.tooltiptext &&
                <span class="tooltiptext">{headTitleItem.tooltiptext}</span>
            }
            <h4>{headTitleItem.blockTitle}</h4><!-- OWN EVERYTHING FROM THE PLOUGH TO THE STARS -CONNOLLY-->
            <p class="ticking-number" growth={headTitleItem.growth}>{headTitleItem.value}</p> 
        </div>
    </div>
    <div class="dd-body">
    <div class="dd-column">

 

  {leftColumnItems.map((block, index) => (

    <div class="diaspora-dashboard-block" onclick={block.link}>
    {block.tooltiptext &&
        <span class="tooltiptext">{block.tooltiptext}</span>
    }
        <a target="_blank" href={block.link}>
        <h4>{block.blockTitle}</h4>
    
        <p class="ticking-number" growth={block.growth}>{block.value}</p> 
        </a>
    </div>
  ))}
    
   

</div>
    <div class="dd-column right-column">
      {rightColumnItems.map((block, index) => (

    <div class="diaspora-dashboard-block" onclick={block.link}>
    {block.tooltiptext &&
        <span class="tooltiptext">{block.tooltiptext}</span>
    }
        <a target="_blank" href={block.link}>
        <h4>{block.blockTitle}</h4>
    
        <p class="ticking-number" growth={block.growth}>{block.value}</p> 
        </a>
    </div>
  ))}

{imageSrc &&
    <div class="diaspora-dashboard-block">
        <div class="dd-block-img">
            <img height="220px" src={imageSrc}/>
        </div>
    </div>
}
    

</div>
